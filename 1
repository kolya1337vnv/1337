<script>
(function(){
  const writers = [
    {id:'tolstoy', name:'‚úçÔ∏è –õ–µ–≤ –¢–æ–ª—Å—Ç–æ–π', meme:'–ü–∏—à–µ—Ç –¥–æ–ª–≥–æ. –ü—Ä–æ–≤–µ—Ä—è–µ—Ç ‚Äî –µ—â—ë –¥–æ–ª—å—à–µ.', color:'#ffb84c',
     svg:`<svg viewBox="0 0 120 120" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><rect x="0" y="0" width="120" height="120" rx="14" fill="#14121a"/><g transform="translate(10,10)"><circle cx="50" cy="36" r="26" fill="#2b2f3a"/><path d="M30 28 q20 -34 40 0" stroke="#f4d6a0" stroke-width="6" fill="none" stroke-linecap="round"/><rect x="20" y="68" width="60" height="16" rx="6" fill="#111216"/><path d="M28 42 q10 6 44 0" stroke="#fff" stroke-width="2" fill="none" stroke-linecap="round"/></g></svg>`},
    {id:'chekhov', name:'üòé –ê–Ω—Ç–æ–Ω –ß–µ—Ö–æ–≤', meme:'–ö–æ—Ä–æ—Ç–∫–æ, –Ω–æ —Å —Å–∞—Ä–∫–∞–∑–º–æ–º.', color:'#7cd1ff',
     svg:`<svg viewBox="0 0 120 120" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><rect x="0" y="0" width="120" height="120" rx="14" fill="#08121a"/><g transform="translate(10,10)"><circle cx="50" cy="36" r="26" fill="#23303b"/><path d="M30 46 q20 -16 40 0" stroke="#c8d8ff" stroke-width="3" fill="none" stroke-linecap="round"/><rect x="22" y="68" width="56" height="14" rx="6" fill="#0d1116"/><circle cx="36" cy="36" r="3.6" fill="#fff"/><circle cx="64" cy="36" r="3.6" fill="#fff"/></g></svg>`},
    {id:'dost', name:'ü§Ø –§—ë–¥–æ—Ä –î–æ—Å—Ç–æ–µ–≤—Å–∫–∏–π', meme:'–ö–æ–≥–¥–∞ –ø—Ä–æ–≤–µ—Ä—è–µ—à—å —Ç–µ—Ç—Ä–∞–¥–∏ –∏ –∑–∞–¥—É–º—ã–≤–∞–µ—à—å—Å—è –æ —Å–º—ã—Å–ª–µ –∂–∏–∑–Ω–∏.', color:'#d6c3a8',
     svg:`<svg viewBox="0 0 120 120" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><rect x="0" y="0" width="120" height="120" rx="14" fill="#0b0810"/><g transform="translate(10,10)"><circle cx="50" cy="36" r="26" fill="#201920"/><path d="M28 34 q22 -28 44 0" stroke="#d7c3b0" stroke-width="5" fill="none" stroke-linecap="round"/><rect x="20" y="68" width="60" height="16" rx="6" fill="#0b0b0e"/><circle cx="36" cy="36" r="3.8" fill="#fff"/><circle cx="64" cy="36" r="3.8" fill="#fff"/></g></svg>`}
  ];

  const avatar = document.getElementById('avatar');
  const nameEl = document.getElementById('name');
  const memeEl = document.getElementById('meme');
  const thinking = document.getElementById('thinking');
  const pickBtn = document.getElementById('pickBtn');
  const nextBtn = document.getElementById('nextBtn');

  function reset(){
    nameEl.textContent = '–ù–∞–∂–º–∏ "–í—ã–±—Ä–∞—Ç—å –ø–∏—Å–∞—Ç–µ–ª—è"';
    memeEl.textContent = '–ó–¥–µ—Å—å –ø–æ—è–≤–∏—Ç—Å—è —à—É—Ç–∫–∞';
    avatar.classList.remove('show');
    const defaultSvg = `<svg viewBox="0 0 120 120" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><rect x="0" y="0" width="120" height="120" rx="14" fill="#0f1724"/><g transform="translate(10,10)"><circle cx="50" cy="40" r="26" fill="#1f2937"/><rect x="20" y="70" width="60" height="14" rx="6" fill="#11121a"/><circle cx="36" cy="36" r="4" fill="#fff"/><circle cx="64" cy="36" r="4" fill="#fff"/><path d="M30 50 q20 12 40 0" stroke="#9aa0b4" stroke-width="3" fill="none" stroke-linecap="round"/></g></svg>`;
    avatar.querySelector('svg').outerHTML = defaultSvg;
  }

  function rand(){
    return writers[Math.floor(Math.random()*writers.length)];
  }

  function reveal(w){
    thinking.classList.add('show');
    avatar.classList.remove('show');
    nameEl.textContent = '...';
    memeEl.textContent = '';
    setTimeout(()=>{
      thinking.classList.remove('show');
      avatar.querySelector('svg').outerHTML = w.svg;
      nameEl.textContent = w.name;
      memeEl.textContent = w.meme;
      avatar.classList.add('show');
    }, 600 + Math.random()*700);
  }

  pickBtn.addEventListener('click', ()=> reveal(rand()));
  nextBtn.addEventListener('click', ()=> reveal(rand()));
  document.addEventListener('keydown',(e)=>{ if(e.key===' '||e.key==='Enter'){ e.preventDefault(); reveal(rand()); }});
  reset();
})();
